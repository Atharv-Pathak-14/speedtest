{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Server: run",
            "type": "npm",
            "script": "run",
            "path": "packages/server/",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "Server: watch",
            "type": "npm",
            "script": "watch",
            "path": "packages/server/",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "Web: watch",
            "type": "npm",
            "script": "watch",
            "path": "packages/web/",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Web: build",
            "type": "npm",
            "script": "build",
            "path": "packages/web/",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Web: dist",
            "type": "npm",
            "script": "dist",
            "path": "packages/web/",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build"
        }
    ]
}
