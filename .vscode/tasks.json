{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Server: NodeJS (Docker)",
            "type": "shell",
            "command": [
                "docker-compose -f node.docker-compose.yml up"
            ],
            "problemMatcher": []
        },
        {
            "label": "Server: NodeJS",
            "type": "shell",
            "command": [
                "npx nodemon server/node/server.js 8080 web/dist"
            ],
            "problemMatcher": []
        },
        {
            "label": "Server: PHP (Docker)",
            "type": "shell",
            "command": [
                "docker-compose -f php.docker-compose.yml up"
            ],
            "problemMatcher": []
        },
        {
            "label": "Server: PHP",
            "type": "shell",
            "command": [
                "php -S 0.0.0.0:8080 -t web/dist/ server/php/router.php"
            ],
            "problemMatcher": []
        },
        {
            "label": "Web: watch",
            "type": "npm",
            "script": "watch",
            "path": "web/",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Web: build",
            "type": "npm",
            "script": "build",
            "path": "web/",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Web: dist",
            "type": "npm",
            "script": "dist",
            "path": "web/",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build"
        }
    ]
}
