{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "path": "web/",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "type": "npm",
            "script": "build",
            "path": "web/",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "Docker",
            "type": "shell",
            "command": [
                "DOCKER_USER=$(id -u):$(id -g); docker-compose up"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
