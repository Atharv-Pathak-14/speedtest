{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Server",
            "type": "shell",
            "command": [
                "npx nodemon server/server.js 8888 web/dist"
            ],
            "problemMatcher": []
        },
        {
            "label": "Web: watch",
            "type": "npm",
            "script": "watch",
            "path": "web/",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Web: build",
            "type": "npm",
            "script": "build",
            "path": "web/",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Web: dist",
            "type": "npm",
            "script": "dist",
            "path": "web/",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "group": "build"
        }
    ]
}
